    <script>
        // === Dados de produtos ===
        const products = [
            { id: 1, name: "Salão de Beleza", price: 297 },
            { id: 2, name: "Restaurante Gourmet", price: 347 },
            { id: 3, name: "Consultório Médico", price: 397 },
            { id: 4, name: "E-commerce Básico", price: 497 },
            { id: 5, name: "Advocacia Premium", price: 447 },
            { id: 6, name: "Escola Particular", price: 527 }
        ];

        const productsGrid = document.getElementById("productsGrid");
        const notification = document.getElementById("notification");
        const loginBtn = document.getElementById("loginBtn");
        const userAvatar = document.getElementById("userAvatar");
        const cartCount = document.getElementById("cartCount");

        let cart = JSON.parse(localStorage.getItem("cart")) || [];
        let user = JSON.parse(localStorage.getItem("user")) || null;

        // === Exibir produtos ===
        function renderProducts() {
            productsGrid.innerHTML = "";
            products.forEach(p => {
                const card = document.createElement("div");
                card.className = "product-card";
                card.innerHTML = `
                    <div class="product-title">${p.name}</div>
                    <div class="product-price">R$ ${p.price}</div>
                    <button class="btn btn-primary" onclick="addToCart(${p.id})">Comprar</button>
                `;
                productsGrid.appendChild(card);
            });
        }

        // === Carrinho ===
        function updateCartUI() {
            cartCount.textContent = cart.reduce((s, i) => s + i.quantity, 0);
            localStorage.setItem("cart", JSON.stringify(cart));
        }

        function addToCart(id) {
            if (!user) return showNotification("Faça login para comprar!", true);
            const product = products.find(p => p.id === id);
            const existing = cart.find(i => i.id === id);
            existing ? existing.quantity++ : cart.push({ ...product, quantity: 1 });
            updateCartUI();
            showNotification(`${product.name} adicionado ao carrinho!`);
        }

        // === Login persistente ===
        function updateUserUI() {
            if (user) {
                loginBtn.style.display = "none";
                userAvatar.textContent = user.name.charAt(0).toUpperCase();
                userAvatar.title = `Logado como ${user.name}`;
            } else {
                loginBtn.style.display = "inline-block";
                userAvatar.innerHTML = '<i class="fas fa-user"></i>';
                userAvatar.title = "Entrar";
            }
        }

        // === Login com Google (já existente) ===
        function onSignIn(googleUser) {
            const profile = googleUser.getBasicProfile();
            user = { name: profile.getName(), email: profile.getEmail() };
            localStorage.setItem("user", JSON.stringify(user));
            updateUserUI();
            showNotification(`Bem-vindo, ${user.name}!`);
        }

        // === Logout ===
        function logout() {
            localStorage.removeItem("user");
            user = null;
            updateUserUI();
            showNotification("Você saiu da conta.");
        }

        // === Notificação ===
        function showNotification(msg, error = false) {
            notification.textContent = msg;
            notification.style.background = error ? "#ef4444" : "var(--primary-color)";
            notification.classList.add("show");
            setTimeout(() => notification.classList.remove("show"), 2500);
        }

        // === Ações ===
        loginBtn.addEventListener("click", () => {
            showNotification("Usando login do Google acima ⬆️");
        });

        userAvatar.addEventListener("click", () => {
            if (user && confirm(`Sair da conta de ${user.name}?`)) logout();
        });

        // Inicialização
        renderProducts();
        updateCartUI();
        updateUserUI();
    </script>
</body>
